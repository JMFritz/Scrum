@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Scrum.Models.Project>

<div class="page">
    <h2>Projects</h2>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>

        @foreach (var listProject in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(listProject.Title, "Details", new { id = listProject.ProjectId })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = listProject.ProjectId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = listProject.ProjectId })
                </td>
            </tr>
        }
    </table>

    <p>@Html.ActionLink("Add New Project", "Create")</p>
</div>