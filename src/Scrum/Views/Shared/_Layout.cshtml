<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scrum</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/css/uikit.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.28/js/uikit-icons.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css" />
</head>
<body>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#register').click(function () {
                $.ajax({
                    type: 'GET',
                    dataType: 'html',
                    url: '@Url.Action("Register")',
                    success: function (result) {
                        $('#accessForm').html(result);
                    }
                });
            });

            $('#login').click(function () {
                $.ajax({
                    type: 'GET',
                    dataType: 'html',
                    url: '@Url.Action("Login")',
                    success: function (result) {
                        $('#accessForm').html(result);
                    }
                });
            });
            $('.new-project').submit(function (event) {
                event.preventDefault();
                $.ajax({
                    url: '@Url.Action("NewProject")',
                    type: 'POST',
                    dataType: 'json',
                    data: $(this).serialize(),
                    success: function (result) {
                        var resultMessage = 'You Created a new Project';
                        $('#projectConfirm').html(resultMessage);
                    }
                });
            });
            $('.addStory').click(function () {
                clicked = $(this)[0].id;
                clicked = parseInt(clicked);
                $.ajax({
                    type: 'GET',
                    dataType: 'html',
                    data: {id : clicked},
                    url: '@Url.Action("Create","UserStories")',
                    success: function (result) {
                        $('#storyForm').html(result);
                    }
                });
            });
            $('.createSprint').click(function () {
                clicked = $(this)[0].id;
                clicked = parseInt(clicked);
                $.ajax({
                    type: 'GET',
                    dataType: 'html',
                    data: { id: clicked },
                    url: '@Url.Action("Create","Sprints")',
                    success: function (result) {
                        $('#sprintForm').html(result);
                    }
                });
            });
            $('.editTaskForm').click(function () {
                clicked = $(this)[0].id;
                clicked = parseInt(clicked);
                $.ajax({
                    type: 'GET',
                    dataType: 'html',
                    data: { id: clicked },
                    url: '@Url.Action("Edit", "Tasks")',
                    success: function (result) {
                        $('#editTask').html(result);
                    }
                });
            });
        });
    </script>

    <nav class="uk-navbar-container" uk-navbar>
        <div class="uk-navbar-left">

            <a class="uk-navbar-item uk-logo" href="#">Logo</a>
            <div class="uk-navbar-item">
                <div><a asp-area="" asp-controller="Account" asp-action="Index">Home</a></div>
            </div>
            <div class="uk-navbar-item">
                <div><a asp-area="" asp-controller="Projects" asp-action="Index">Projects</a></div>
            </div>
            <div class="uk-navbar-item">
                <div><a asp-area="" asp-controller="Tools" asp-action="Index">Toolbox</a></div>
            </div>
        </div>
    </nav>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Scrum</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Account" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Projects" asp-action="Index">Projects</a></li>
                    <li><a asp-area="" asp-controller="Tools" asp-action="Index">Toolbox</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
