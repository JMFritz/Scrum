@model Scrum.Models.Task

@{
    ViewData["Title"] = "Task - Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div uk-grid>
    <div class="uk-width-1-2">
        <div class="uk-card uk-card-default uk-card-body">
            <h2>@Model.Description</h2>
            <p>@Html.DisplayNameFor(model => model.Priority) : @Html.DisplayFor(model => model.Priority)</p>
        </div>
    </div>
    <div class="uk-width-1-4">
        <div class="uk-card uk-card-default uk-card-body uk-text-center">
            @if (@Model.Complete)
            {
                <i class="fa fa-check" aria-hidden="true" style="font-size: 50px; color: green;"></i>
            }
            @if (!@Model.Complete)
            {
                <i class="fa fa-times" aria-hidden="true" style="font-size: 50px; color: tomato;"></i>
            }
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.TaskId)
                <input type="submit" value="Completed" />
            }
        </div>
    </div>
    <div class="uk-width-1-4">
        <div class="uk-card uk-card-default uk-card-body">
            <button class="uk-button uk-button-secondary uk-margin-small-center" type="button">@Html.ActionLink("Delete", "Delete", "Tasks", new { id = Model.TaskId})</button>
            <hr />
            <button class="uk-button uk-button-secondary uk-margin-small-center" type="button" class="editTaskForm" id="@Model.TaskId">Edit This Task</button>
            <div id="editTask"></div>
        </div>
    </div>
</div>


